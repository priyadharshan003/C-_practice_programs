
#include <bits/stdc++.h>
using namespace std;

// Function to solve the problem using dynamic programming
int solveUtil(int n, vector<int>& arr, vector<int>& dp) {
    // Base case: If there are no elements in the array, return 0
    dp[0] = arr[0];
    
    // Iterate through the elements of the array
    for (int i = 1; i < n; i++) {
        // Calculate the maximum value by either picking the current element
        // or not picking it 
        int pick = arr[i];
        if (i > 1)
            pick += dp[i - 2];
        int nonPick = dp[i - 1];
        
        // Store the maximum value in the dp array
        dp[i] = max(pick, nonPick);
    }
    
    // The last element of the dp array will contain the maximum sum
    return dp[n - 1];
}

// Function to initiate the solving process
int solve(int n, vector<int>& arr) {
    vector<int> dp(n, 0); 
    return solveUtil(n, arr, dp);
}

int main() {
    vector<int> arr{2, 1, 4, 9};
    int n = arr.size();
    vector<int>a1,a2;
    
    for(int i = 0;i<n;i++){
        if(arr[i]!=0) a1.push_back(arr[i]);
        if(arr[i]!=n-1) a2.push_back(arr[i]);
    }
    
    cout<<max(solve(n, a1),solve(n,a2));

    return 0;
}

